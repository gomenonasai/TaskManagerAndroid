<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="12dp"
    android:backgroundTint="@color/white"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp">

    <!-- contenedor de los elementos de la tarjeta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- título -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título de la tarea"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="6dp"/>

        <!-- descripción -->
        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción de la tarea"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <!-- categoría -->
        <TextView
            android:id="@+id/txtCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoría: Trabajo"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginBottom="4dp"/>

        <!-- prioridad y urgencia -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/txtPrioridad"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Prioridad: Alta"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txtUrgencia"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Urgencia: 3 ★"
                android:gravity="end"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- importante con checkbox -->
        <TextView
            android:id="@+id/txtImportante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡IMPORTANTE!"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/> <!-- oculto si no aplica -->

        <!-- Checkbox completada -->
        <CheckBox
            android:id="@+id/chkCompletada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completada"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>